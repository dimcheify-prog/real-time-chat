{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "*",
    "controllers",
    "src/router",
    "src/models",
    "src/exceptions",
    "src/middleware",
    "src/index.ts",
    "src/dtos",
    "src/middleware"
  ]
}
